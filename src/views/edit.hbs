<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Update Patient</h1> 

          <form action="/patients/{{patient._id}}/edit" method="post"> 

           
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="patientName" 
                value="{{patient.patientName}}" 
              />
            </div>

           
            <div class="mb-3">
              <input
                class="form-control"
                type="number" 
                name="age" 
                value="{{patient.age}}" 
              />
            </div>

            
            <div class="mb-3">
              <input
                class="form-control"
                type="number"
                name="amount" 
               
                value="{{patient.amount}}" 
              />
            </div>

            
            <div class="mb-3">
              <textarea
                class="form-control"
                name="description"
                rows="3"
                
              >{{patient.description}}</textarea>
            </div>

            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
