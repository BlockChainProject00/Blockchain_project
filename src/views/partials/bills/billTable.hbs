{{#if bills}}
  <!-- Add patient button -->
  <div>
    <a class="btn btn-danger mb-3" href="/">Back to Home</a></div>
  <a class="btn btn-primary mb-3" href="/bills/add">Add New Bill</a></div>
  <table class="table table-bordered table-hover table-info">
    <thead>
      <tr>
        
        <th>ID</th>
        <th>Bill Name</th> 
        <th>Date</th> 
        <th>Amount</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each bills}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{billName}}</strong></td> 
          <td>{{date}}</td> 
          <td>{{amount}}</td> 
          <td>{{description}}</td>
          <td>
            <a class="btn btn-success" href="/bills/{{_id}}/edit">Edit</a> 
            <a class="btn btn-danger" href="/bills/{{_id}}/delete">Delete</a> 
            

          </td>
        </tr>
      {{/each}}
    </tbody>
    
  </table>
  
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No bills</h1> 
      <img src="/icons/empty.svg" class="w-75" />
    </div>
  </div>
{{/if}}
